<?xml version="1.0" encoding="utf-8" ?>
<!-- Đây là file cấu hình chính cho ứng dụng. Nó chứa các thiết lập như chuỗi kết nối CSDL. -->
<configuration>
    <!-- Phần này dùng để định nghĩa các chuỗi kết nối đến cơ sở dữ liệu. -->
    <connectionStrings>
        <!-- Thay thế 'YOUR_SERVER_NAME' bằng tên SQL Server instance của bạn -->
        <!-- 
            Định nghĩa một chuỗi kết nối có tên là "CafeDB". Tên này được dùng trong code C# để lấy chuỗi kết nối.
            - Data Source: Tên máy chủ và instance của SQL Server (ở đây là SQLEXPRESS trên máy local).
            - Initial Catalog: Tên của cơ sở dữ liệu cần kết nối (ở đây là "Cafe").
            - Integrated Security=True: Sử dụng xác thực Windows để đăng nhập, không cần username/password.
            - providerName: Chỉ định nhà cung cấp dữ liệu, ở đây là cho SQL Server.
        -->
        <add name="CafeDB" connectionString="Data Source=localhost\SQLEXPRESS;Initial Catalog=Cafe;Integrated Security=True" providerName="System.Data.SqlClient"/>
    </connectionStrings>
    <!-- Phần này xác định phiên bản .NET Framework mà ứng dụng yêu cầu để chạy. -->
    <startup> 
        <!-- Khai báo rằng ứng dụng hỗ trợ và được xây dựng trên .NET Framework 4.7.2. -->
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
</configuration>
