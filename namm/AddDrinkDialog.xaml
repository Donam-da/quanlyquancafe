<!-- Định nghĩa một cửa sổ (Window) nhỏ để thêm đồ uống, hỏi người dùng về số lượng. -->
<Window x:Class="namm.AddDrinkDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Thêm món" Height="180" Width="300"  <!-- Tiêu đề, chiều cao và chiều rộng của cửa sổ. -->
        WindowStartupLocation="CenterOwner"       <!-- Cửa sổ sẽ xuất hiện ở giữa cửa sổ cha đã gọi nó. -->
        WindowStyle="ToolWindow"                  <!-- Kiểu cửa sổ đơn giản, thường không có nút thu nhỏ/phóng to. -->
        Loaded="Window_Loaded">                   <!-- Sự kiện được gọi khi cửa sổ đã được tải xong. -->
    <!-- Grid là layout chính, chia không gian thành các hàng và cột. Margin="15" tạo khoảng cách 15 pixel xung quanh. -->
    <Grid Margin="15">
        <!-- Định nghĩa 3 hàng cho layout. Chiều cao "Auto" tự điều chỉnh theo nội dung, "*" chiếm phần còn lại. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Hàng 0: Hiển thị tên của đồ uống sẽ được thêm. Tên này sẽ được gán từ code-behind. -->
        <TextBlock x:Name="tbDrinkName" Grid.Row="0" Text="Tên đồ uống" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

        <!-- Hàng 1: Chứa nhãn "Số lượng" và ô nhập liệu. -->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBlock Text="Số lượng:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtQuantity" Width="100" VerticalContentAlignment="Center" Text="1" KeyDown="TxtQuantity_KeyDown"/> <!-- Ô nhập số lượng, giá trị mặc định là "1". -->
        </StackPanel>

        <!-- Hàng 2: Chứa các nút hành động (Đồng ý, Hủy). -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <Button x:Name="btnOk" Content="Đồng ý" Width="80" Margin="0,0,10,0" IsDefault="True" Click="BtnOk_Click"/> <!-- Nút Đồng ý. IsDefault="True" cho phép nhấn Enter để kích hoạt. -->
            <Button x:Name="btnCancel" Content="Hủy" Width="80" IsCancel="True"/> <!-- Nút Hủy. IsCancel="True" cho phép nhấn Esc để đóng cửa sổ. -->
        </StackPanel>
    </Grid>
</Window>