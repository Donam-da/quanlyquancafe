<!-- Đây là file định nghĩa giao diện người dùng (UI) cho cửa sổ chọn kiểu và số lượng đồ uống. -->
<Window x:Class="namm.SelectDrinkTypeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chọn kiểu và số lượng" 
        SizeToContent="Height" Width="350"
        WindowStartupLocation="CenterOwner" 
        WindowStyle="ToolWindow"
        Loaded="Window_Loaded"> <!-- Sự kiện Loaded sẽ được gọi khi cửa sổ được tải xong. -->
    <!-- Grid là layout chính, chứa tất cả các phần tử khác. Margin="15" tạo khoảng cách 15 pixel xung quanh. -->
    <Grid Margin="15">
        <!-- Chia Grid thành 3 hàng: tiêu đề, nội dung chính, và các nút bấm. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Hàng 0 cho tiêu đề, chiều cao tự động theo nội dung. -->
            <RowDefinition Height="*"/>    <!-- Hàng 1 cho nội dung, chiếm hết không gian còn lại. -->
            <RowDefinition Height="Auto"/> <!-- Hàng 2 cho các nút, chiều cao tự động. -->
        </Grid.RowDefinitions>

        <!-- TextBlock để hiển thị tên đồ uống, nằm ở hàng 0. -->
        <TextBlock x:Name="tbDrinkName" Grid.Row="0" Text="Tên đồ uống" FontWeight="Bold" FontSize="16" Margin="0,0,0,15"/>

        <!-- Grid này sẽ là nơi chứa các ô nhập liệu được tạo tự động từ code-behind, nằm ở hàng 1. -->
        <Grid x:Name="gridDrinkTypes" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Cột 0 cho nhãn tên kiểu (ví dụ: "Pha chế:"), chiều rộng tự động theo nội dung. -->
                <ColumnDefinition Width="Auto"/>
                <!-- Cột 1 cho ô nhập liệu và số lượng tồn, chiều rộng tự động. -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- StackPanel chứa các nút "Đồng ý" và "Hủy", nằm ở hàng 2. -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button x:Name="btnOk" Content="Đồng ý" Width="80" Margin="0,0,10,0" IsDefault="True" Click="BtnOk_Click"/> <!-- IsDefault="True" có nghĩa là nút này sẽ được nhấn khi người dùng bấm Enter. -->
            <Button x:Name="btnCancel" Content="Hủy" Width="80" IsCancel="True"/> <!-- IsCancel="True" có nghĩa là nút này sẽ được nhấn khi người dùng bấm Esc, và nó sẽ tự động đóng cửa sổ với kết quả là 'false'. -->
        </StackPanel>
    </Grid>
</Window>