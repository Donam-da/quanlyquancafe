<UserControl x:Class="namm.ChangePasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <!-- Định nghĩa giao diện người dùng (UserControl) cho chức năng đổi mật khẩu. -->
    <Grid> <!-- Layout chính, chỉ có một ô duy nhất. -->
        <!-- Panel chính, sắp xếp các control theo chiều dọc, căn giữa màn hình và có chiều rộng cố định. -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <!-- Tiêu đề của màn hình. -->
            <TextBlock Text="ĐỔI MẬT KHẨU" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <!-- Nhãn cho ô tên đăng nhập. -->
            <TextBlock Text="Tên đăng nhập:" Margin="0,10,0,2"/>
            <TextBox x:Name="txtUserName" Padding="5" IsReadOnly="True" Background="#EEEEEE"/> <!-- Ô hiển thị tên đăng nhập, chỉ đọc (IsReadOnly="True") để người dùng không thể sửa. -->

            <!-- Nhãn cho ô mật khẩu cũ. -->
            <TextBlock Text="Mật khẩu cũ:" Margin="0,10,0,2"/>
            <PasswordBox x:Name="pwbOldPassword" Padding="5"/> <!-- Ô nhập mật khẩu cũ. Ký tự nhập vào sẽ được che đi. -->

            <!-- Nhãn cho ô mật khẩu mới. -->
            <TextBlock Text="Mật khẩu mới:" Margin="0,10,0,2"/>
            <PasswordBox x:Name="pwbNewPassword" Padding="5"/> <!-- Ô nhập mật khẩu mới. -->

            <!-- Nhãn cho ô xác nhận mật khẩu. -->
            <TextBlock Text="Nhập lại mật khẩu mới:" Margin="0,10,0,2"/>
            <PasswordBox x:Name="pwbConfirmPassword" Padding="5"/> <!-- Ô nhập lại mật khẩu mới để xác nhận. -->

            <!-- Panel chứa các nút hành động. -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="btnUpdate" Content="Cập nhật" Width="100" Margin="5" Click="BtnUpdate_Click"/> <!-- Nút để xác nhận việc đổi mật khẩu. -->
                <Button x:Name="btnReset" Content="Làm mới" Width="100" Margin="5" Click="BtnReset_Click"/> <!-- Nút để xóa trắng các ô đã nhập. -->
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>