<!-- Đây là file định nghĩa giao diện người dùng (UI) cho chức năng quản lý Menu đồ uống. -->
<UserControl x:Class="namm.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1000"
             Loaded="UserControl_Loaded">
    <!-- Layout chính, chia giao diện thành 2 cột. -->
    <Grid Margin="10">
        <!-- Định nghĩa các style để căn chỉnh nội dung trong DataGrid. -->
        <Grid.Resources>
            <!-- Style để căn giữa tiêu đề các cột. -->
            <Style x:Key="CenterAlignedColumnHeader" TargetType="DataGridColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <!-- Style để căn giữa nội dung trong các ô. -->
            <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <!-- Định nghĩa 2 cột: cột trái chiếm phần lớn không gian (*), cột phải rộng 350 pixel. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 0 (bên trái): Chứa danh sách đồ uống. -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <!-- Phần trên cùng của DockPanel, chứa tiêu đề và ô tìm kiếm. -->
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="DANH SÁCH ĐỒ UỐNG TRÊN MENU" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBox x:Name="txtSearch" Margin="0,0,0,5" Height="25" ToolTip="Nhập tên đồ uống để tìm kiếm" TextChanged="TxtSearch_TextChanged"/> <!-- Ô tìm kiếm, gọi sự kiện khi nội dung thay đổi. -->
            </StackPanel>
            <!-- Bảng (DataGrid) hiển thị danh sách đồ uống, chiếm phần còn lại của DockPanel. -->
            <DataGrid x:Name="dgMenuItems" AutoGenerateColumns="False" IsReadOnly="True"                        
                      LoadingRow="DgMenuItems_LoadingRow" SelectionChanged="DgMenuItems_SelectionChanged">
                <!-- Định nghĩa các cột sẽ hiển thị trong DataGrid. Binding được dùng để liên kết cột với thuộc tính trong dữ liệu. -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="0.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Tên đồ uống" Binding="{Binding Name}" Width="2*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Mã Đồ Uống" Binding="{Binding DrinkCode}" Width="1.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/> <!-- Mã đồ uống. -->
                    <DataGridTextColumn Header="Loại" Binding="{Binding CategoryName}" Width="1.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Kiểu đồ uống" Binding="{Binding DrinkType}" Width="1.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Cột 1 (bên phải): Chứa form thông tin chi tiết và các nút chức năng. -->
        <DockPanel Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="THÔNG TIN CHI TIẾT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel> <!-- StackPanel sắp xếp các phần tử con theo chiều dọc. -->
                <TextBlock Text="Tên đồ uống:" Margin="0,5,0,2"/>
                <TextBox x:Name="txtName" Padding="5" LostFocus="TxtName_LostFocus"/> <!-- Ô nhập tên. Sự kiện LostFocus để tự động tạo mã. -->

                <TextBlock Text="Mã đồ uống:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtDrinkCode" Padding="5" IsReadOnly="True" Background="#EEEEEE" ToolTip="Mã này được tạo tự động"/>

                <TextBlock Text="Loại đồ uống:" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbCategory" Padding="5" DisplayMemberPath="Name" SelectedValuePath="ID"/>

                <CheckBox x:Name="chkIsActive" Content="Hiển thị trên menu" Margin="0,15,0,0" IsChecked="True"/>

                <!-- WrapPanel chứa các nút chức năng, tự động xuống dòng nếu không đủ chỗ. -->
                <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnAdd" Content="Thêm" Width="80" Margin="5" Click="BtnAdd_Click"/>
                    <Button x:Name="btnUpdate" Content="Sửa" Width="80" Margin="5" Click="BtnUpdate_Click" IsEnabled="False"/>
                    <Button x:Name="btnHide" Content="Ẩn/Hiện" Width="80" Margin="5" Click="BtnHide_Click" IsEnabled="False" Background="#FFC107" Foreground="Black"/>
                    <Button x:Name="btnDelete" Content="Xóa" Width="80" Margin="5" Click="BtnDelete_Click" IsEnabled="False" Background="#DC3545" Foreground="White"/> <!-- Nút Xóa, ban đầu bị vô hiệu hóa. -->
                </WrapPanel>
                <Button x:Name="btnReset" Content="Làm mới" Width="80" Margin="5" HorizontalAlignment="Center" Click="BtnReset_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>
