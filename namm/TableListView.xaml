<!-- Đây là file định nghĩa giao diện người dùng (UI) cho chức năng hiển thị danh sách bàn ăn. -->
<UserControl x:Class="namm.TableListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Loaded="UserControl_Loaded"> <!-- Sự kiện Loaded sẽ được gọi khi control này được tải xong. -->
    <!-- ScrollViewer cho phép người dùng cuộn xem nội dung nếu có quá nhiều bàn và chúng không vừa với màn hình. -->
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!-- WrapPanel là một layout đặc biệt, nó sẽ tự động sắp xếp các phần tử con (ở đây là các nút bàn ăn) thành các hàng và cột. -->
        <!-- Khi một hàng đầy, nó sẽ tự động "wrap" (ngắt) xuống hàng tiếp theo. -->
        <WrapPanel x:Name="wpTables" Margin="10"/>
    </ScrollViewer>
</UserControl>