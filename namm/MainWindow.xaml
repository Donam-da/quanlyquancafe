<!-- Đây là file định nghĩa giao diện người dùng (UI) cho cửa sổ đăng nhập chính. -->
<Window x:Class="namm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Đăng nhập - Quản lý Cafe" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <!-- Không gian tên chính của WPF. -->
    <!-- Không gian tên cho các từ khóa của XAML. -->
    <!-- Dành cho các công cụ thiết kế (như Blend). -->
    <!-- Dành cho tương thích đánh dấu. -->
    <!-- Tham chiếu đến namespace của dự án này. -->
    <!-- Chỉ thị cho trình biên dịch bỏ qua các thuộc tính của không gian tên 'd'. -->
    <!-- Tiêu đề, chiều cao và chiều rộng của cửa sổ. -->
    <!-- Cửa sổ sẽ xuất hiện ở giữa màn hình khi khởi chạy. -->
    <!-- Không cho phép người dùng thay đổi kích thước cửa sổ. -->
    <!-- Grid là layout chính, chia không gian thành các hàng và cột. -->
    <Grid> 
        <!-- Định nghĩa hai cột cho layout. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="iconColumn" Width="2*"/> <!-- Cột bên trái, chiếm 2/5 chiều rộng. -->
            <ColumnDefinition Width="3*"/> <!-- Cột bên phải, chiếm 3/5 chiều rộng. -->
        </Grid.ColumnDefinitions>

        <!-- Cột 0 (bên trái): Chứa biểu tượng/logo đăng nhập. -->
        <Border x:Name="iconBorder" Grid.Column="0" Background="#D2B48C"> <!-- Border để tạo nền màu. Màu nền sẽ được thay đổi từ code-behind. -->
            <!-- Image để hiển thị logo. Nguồn ảnh (Source) sẽ được thiết lập từ code-behind. -->
            <Image x:Name="imgLoginIcon" Stretch="Uniform" Margin="30" ToolTip="Quán Namm"/> <!-- Stretch="Uniform" đảm bảo ảnh vừa vặn mà không bị méo. -->
        </Border>

        <!-- Cột 1 (bên phải): Chứa form đăng nhập. -->
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"> <!-- StackPanel sắp xếp các phần tử con theo chiều dọc. -->
            <!-- Tiêu đề của form đăng nhập. -->
            <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/> 

            <!-- Hàng nhập tên đăng nhập. -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Tên đăng nhập:" Width="120" VerticalAlignment="Center" FontSize="14"/> <!-- Nhãn. -->
                <TextBox x:Name="txtUsername" Width="200" FontSize="14" Padding="5"/> <!-- Ô nhập liệu cho tên đăng nhập. -->
            </StackPanel>
            <!-- Hàng nhập mật khẩu. -->
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Mật khẩu:" Width="120" VerticalAlignment="Center" FontSize="14"/> <!-- Nhãn. -->
                <PasswordBox x:Name="pwbPassword" Width="200" FontSize="14" Padding="5"/> <!-- Ô nhập mật khẩu, các ký tự sẽ bị che đi. -->
            </StackPanel>
            <!-- Ô check để lưu thông tin đăng nhập. -->
            <CheckBox x:Name="chkRememberMe" Content="Lưu thông tin" HorizontalAlignment="Left" Margin="130,5,0,0"/> 
            <!-- Panel chứa các nút hành động. -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,10">
                <Button x:Name="btnLogin" Content="Đăng nhập" Width="100" Margin="0,0,10,0" Click="BtnLogin_Click" IsDefault="True"/> <!-- Nút Đăng nhập. IsDefault="True" cho phép nhấn Enter để kích hoạt. -->
                <Button x:Name="btnExit" Content="Thoát" Width="100" Click="BtnExit_Click" IsCancel="True"/> <!-- Nút Thoát. IsCancel="True" cho phép nhấn Esc để kích hoạt. -->
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
