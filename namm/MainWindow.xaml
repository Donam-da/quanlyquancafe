<Window x:Class="namm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Đăng nhập - Quản lý Cafe" Height="400" Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="iconColumn" Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Cột trái: Biểu tượng -->
        <Border x:Name="iconBorder" Grid.Column="0" Background="#D2B48C"> <!-- Màu nâu nhạt (Tan) -->
            <!-- Icon sẽ được thiết lập từ code-behind -->
            <Image x:Name="imgLoginIcon" Stretch="Uniform" Margin="30" ToolTip="Quán Namm"/>
        </Border>

        <!-- Cột phải: Form đăng nhập -->
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ĐĂNG NHẬP HỆ THỐNG" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Tên đăng nhập:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="txtUsername" Width="200" FontSize="14" Padding="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="Mật khẩu:" Width="120" VerticalAlignment="Center" FontSize="14"/>
                <PasswordBox x:Name="pwbPassword" Width="200" FontSize="14" Padding="5"/>
            </StackPanel>
            <CheckBox x:Name="chkRememberMe" Content="Lưu thông tin" HorizontalAlignment="Left" Margin="130,5,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,20,10,10">
                <Button x:Name="btnLogin" Content="Đăng nhập" Width="100" Margin="0,0,10,0" Click="BtnLogin_Click" IsDefault="True"/>
                <Button x:Name="btnExit" Content="Thoát" Width="100" Click="BtnExit_Click" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
