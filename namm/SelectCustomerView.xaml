<!-- Đây là file định nghĩa giao diện người dùng (UI) cho chức năng Chọn khách hàng & Thanh toán. -->
<UserControl x:Class="namm.SelectCustomerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">

    <!-- Định nghĩa các tài nguyên (ví dụ: Style) có thể tái sử dụng trong UserControl này. -->
    <UserControl.Resources>
        <!-- Style này tạo một TextBox có chữ mờ (placeholder) khi nó trống. -->
        <Style x:Key="TextBoxWithPlaceholder" TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Border và ScrollViewer là cấu trúc cơ bản của một TextBox. -->
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="2"/>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                            <!-- TextBlock này sẽ hiển thị chữ mờ (lấy từ thuộc tính Tag của TextBox). -->
                            <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" 
                                       Margin="5,2"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <!-- Mặc định ẩn chữ mờ đi. -->
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <!-- Khi thuộc tính Text của TextBox rỗng, chữ mờ sẽ hiện ra. -->
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- Grid là layout chính, chia không gian thành các hàng và cột. -->
    <Grid Background="#FAFAFA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Hàng 0 cho tiêu đề, chiều cao tự động theo nội dung. -->
            <RowDefinition Height="*"/>    <!-- Hàng 1 cho nội dung chính, chiếm hết không gian còn lại. -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="THANH TOÁN &amp; CHỌN KHÁCH HÀNG" 
                       FontSize="22" 
                       FontWeight="Bold" 
                       Foreground="#2E4053" 
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="tbBillInfo" 
                       HorizontalAlignment="Center" 
                       FontSize="16" 
                       Margin="0,5,0,0" 
                       Foreground="DarkSlateGray"/>
            <Separator Margin="0,10,0,10"/>
        </StackPanel>

        <!-- Nội dung chính, được chia thành 2 cột. -->
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/> <!-- Cột trái (danh sách KH) chiếm 5 phần. -->
                <ColumnDefinition Width="2*"/> <!-- Cột phải (form) chiếm 2 phần. -->
            </Grid.ColumnDefinitions>

            <!-- Cột trái: Danh sách khách hàng -->
            <!-- DockPanel cho phép neo các phần tử vào các cạnh. -->
            <DockPanel Grid.Column="0" Margin="0,0,10,0">
                <!-- Ô tìm kiếm được neo ở trên cùng. -->
                <StackPanel DockPanel.Dock="Top">
                    <TextBlock Text="Tìm khách hàng (theo Tên hoặc SĐT):" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtSearchCustomer" 
                             KeyDown="TxtSearchCustomer_KeyDown" 
                             Tag="Nhập từ khóa tìm kiếm..." Style="{StaticResource TextBoxWithPlaceholder}"
                             Margin="0,0,0,5"/>
                </StackPanel>

                <!-- TextBlock hiển thị thông tin khách hàng đã chọn, được neo ở dưới cùng. -->
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock x:Name="tbSelectedCustomer" 
                               Text="(Chưa chọn khách hàng)" 
                               FontStyle="Italic" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Bảng (DataGrid) hiển thị danh sách khách hàng, chiếm phần không gian còn lại ở giữa. -->
                <DataGrid x:Name="dgCustomers" 
                          Margin="0,10,0,0" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True" 
                          SelectionMode="Single"                          
                          LoadingRow="DgCustomers_LoadingRow" 
                          SelectionChanged="DgCustomers_SelectionChanged" 
                          SelectedValuePath="ID"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="#F5F5F5">
                    <!-- Các sự kiện để xử lý logic trong code-behind. -->
                    <DataGrid.Resources>
                        <!-- Style để căn giữa nội dung của tất cả các tiêu đề cột. -->
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        </Style>
                        <!-- Style để căn giữa nội dung của tất cả các ô trong bảng. -->
                        <Style TargetType="DataGridCell">
                            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <!-- Định nghĩa các cột cho DataGrid. Binding được dùng để liên kết cột với thuộc tính trong dữ liệu. -->
                        <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="40"/>
                        <DataGridTextColumn Header="Tên K.Hàng" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Số điện thoại" Binding="{Binding PhoneNumber}" Width="105"/>
                        <DataGridTextColumn Header="Mã khách hàng" Binding="{Binding CustomerCode}" Width="120"/>
                        <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
                        <DataGridTextColumn Header="SL mua" Binding="{Binding PurchaseCount}" Width="0.8*"/>
                        <DataGridTextColumn Header="Tổng chi tiêu" Binding="{Binding TotalSpent, StringFormat=N0}" Width="1.2*"/>
                        <DataGridTextColumn Header="Mức giảm" Binding="{Binding DiscountLevel}" Width="0.8*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>

            <!-- Cột phải: Chứa form thêm/sửa khách hàng và các nút thanh toán. -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- GroupBox để nhóm các control thông tin khách hàng. -->
                <GroupBox Header="Thông tin khách hàng" FontWeight="Bold" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <!-- Các ô nhập liệu cho thông tin khách hàng. -->
                        <TextBlock Text="Tên khách hàng (*):"/>
                        <TextBox x:Name="txtNewCustomerName" 
                                 Margin="0,2,0,5" 
                                 LostFocus="TxtNewCustomerName_LostFocus"
                                 Tag="Nhập họ và tên đầy đủ..." Style="{StaticResource TextBoxWithPlaceholder}"/>

                        <TextBlock Text="Mã khách hàng:"/>
                        <TextBox x:Name="txtNewCustomerCode" 
                                 Margin="0,2,0,5" 
                                 IsReadOnly="True" 
                                 Background="#EEEEEE" Tag="Mã được tạo tự động" Style="{StaticResource TextBoxWithPlaceholder}"/>

                        <TextBlock Text="Số điện thoại:"/>
                        <TextBox x:Name="txtNewCustomerPhone" 
                                 Margin="0,2,0,5"
                                 Tag="Nhập số điện thoại..." Style="{StaticResource TextBoxWithPlaceholder}"/>

                        <TextBlock Text="Địa chỉ:"/>
                        <TextBox x:Name="txtNewCustomerAddress" 
                                 Margin="0,2,0,5"
                                 Tag="Nhập địa chỉ khách hàng..." Style="{StaticResource TextBoxWithPlaceholder}"/>

                        <!-- WrapPanel chứa các nút chức năng, tự động xuống dòng nếu không đủ chỗ. -->
                        <WrapPanel HorizontalAlignment="Center" Margin="0,15,0,5">
                            <Button x:Name="btnAddNewCustomer"
                                    Content="Thêm mới"
                                    Click="BtnAddNewCustomer_Click"
                                    Margin="2" Padding="10,5"/>
                            <Button x:Name="btnEditCustomer"
                                    Content="Lưu sửa"
                                    Click="BtnEditCustomer_Click"
                                    Margin="2" Padding="10,5"
                                    IsEnabled="False"/>
                            <Button x:Name="btnDeleteCustomer"
                                    Content="Xóa"
                                    Click="BtnDeleteCustomer_Click"
                                    Margin="2" Padding="10,5"
                                    Background="#DC3545" Foreground="White"
                                    IsEnabled="False"/>
                            <Button x:Name="btnResetNewCustomer"
                                    Content="Làm mới"
                                    Click="BtnResetNewCustomer_Click"
                                    Margin="2" Padding="10,5"/>
                        </WrapPanel>
                    </StackPanel>
                </GroupBox>

                <Separator Margin="0,10,0,10"/>

                <Button x:Name="btnPay" 
                        Content="Thanh Toán" 
                        Height="45" 
                        FontSize="16" 
                        FontWeight="Bold" 
                        Background="#4CAF50" 
                        Foreground="White" 
                        IsEnabled="False" 
                        Click="BtnPay_Click"/>

                <Button x:Name="btnPayAsGuest" 
                        Content="Thanh toán (Khách vãng lai)" 
                        Margin="0,10,0,0" 
                        Height="40" 
                        Background="#0275D8" 
                        Foreground="White"
                        Click="BtnPayAsGuest_Click"/>

                <Button x:Name="btnBack" 
                        Content="Quay lại" 
                        Margin="0,10,0,0" 
                        Height="35" 
                        Click="BtnBack_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
