<!-- File này định nghĩa giao diện người dùng (UI) cho cửa sổ hiển thị hóa đơn thanh toán. -->
<!-- Nó được thiết kế để trông giống như một tờ hóa đơn thực tế, bao gồm thông tin quán, chi tiết hóa đơn, danh sách món, và tổng tiền. -->
<Window x:Class="namm.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:namm"
        mc:Ignorable="d"
        Title="Hóa đơn thanh toán" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        FontFamily="Segoe UI">
    <!-- Grid là layout chính, chứa tất cả các thành phần khác. x:Name="InvoiceGrid" để có thể truy cập từ code-behind (ví dụ: để đặt ảnh nền). -->
    <Grid x:Name="InvoiceGrid" Margin="15">
        <!-- Chia Grid thành 5 hàng với chiều cao khác nhau. "*" nghĩa là chiếm hết không gian còn lại. -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Hàng 0: Header thông tin quán -->
            <RowDefinition Height="Auto"/> <!-- Hàng 1: Thông tin chi tiết hóa đơn -->
            <RowDefinition Height="*"/>    <!-- Hàng 2: Danh sách món ăn -->
            <RowDefinition Height="Auto"/> <!-- Hàng 3: Tổng tiền -->
            <RowDefinition Height="Auto"/> <!-- Hàng 4: Các nút chức năng -->
        </Grid.RowDefinitions>

        <!-- Hàng 0: Phần Header: Thông tin quán và tiêu đề hóa đơn. -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" TextBlock.TextAlignment="Center">
            <TextBlock Text="Quán Namm" FontSize="24" FontWeight="Bold" Foreground="#1A5276"/>
            <TextBlock Text="Canteen Phenikaa, Yên Nghĩa, Hà Đông, Hà Nội" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="Điện thoại: 0855.361.500" FontSize="12" Foreground="Gray"/>
            <TextBlock Text="HÓA ĐƠN THANH TOÁN" FontSize="20" FontWeight="SemiBold" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Hàng 1: Phần thông tin chi tiết: Bàn, Khách hàng, Ngày. -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,1" Margin="0,15" Padding="0,10">
            <Grid HorizontalAlignment="Center">
                <!-- Chia thành 2 cột: một cho nhãn (ví dụ: "Số HĐ:"), một cho giá trị (ví dụ: "HD00123"). -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Số HĐ:" FontWeight="SemiBold" Margin="0,0,10,2" TextAlignment="Left"/>
                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbInvoiceId" Text="HD00123"/> <!-- TextBlock này sẽ được điền dữ liệu từ code-behind. -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Bàn:" FontWeight="SemiBold" Margin="0,0,10,2" TextAlignment="Left"/>
                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="tbTableName" Text="Bàn 01"/>
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Khách hàng:" FontWeight="SemiBold" Margin="0,0,10,2" TextAlignment="Left"/>
                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="tbCustomerName" Text="Đỗ Hoài Nam"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Mã KH:" FontWeight="SemiBold" Margin="0,0,10,2" TextAlignment="Left"/>
                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="tbCustomerCode" Text="N/A"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Ngày:" FontWeight="SemiBold" Margin="0,0,10,2" TextAlignment="Left"/>
                <TextBlock Grid.Row="4" Grid.Column="1" x:Name="tbDateTime" Text="20/10/2023 10:30 AM"/>
            </Grid>
        </Border>

        <!-- Hàng 2: Danh sách các món ăn. -->
        <DataGrid Grid.Row="2" x:Name="dgBillItems" BorderThickness="0" HorizontalAlignment="Center"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  HeadersVisibility="Column" GridLinesVisibility="None" Background="Transparent">
            <!-- DataGrid.Resources định nghĩa các style chỉ áp dụng cho DataGrid này. -->
            <DataGrid.Resources>
                <!-- Style cho tiêu đề cột (Header): căn giữa, in đậm. -->
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </Style>
                <!-- Style cho các ô dữ liệu: căn giữa nội dung. -->
                <Style x:Key="CenterCell" TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </DataGrid.Resources>
            <!-- Định nghĩa các cột sẽ hiển thị trong DataGrid. -->
            <DataGrid.Columns>
                <!-- Cột Tên món. Binding="{Binding DrinkName}" liên kết với thuộc tính DrinkName của đối tượng BillItem. -->
                <DataGridTextColumn Header="Tên món" Binding="{Binding DrinkName}" Width="160">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Center"/>
                            <Setter Property="TextWrapping" Value="Wrap"/> <!-- Tự động xuống dòng nếu tên món quá dài. -->
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <!-- Cột Số lượng (SL). ElementStyle="{StaticResource CenterCell}" áp dụng style đã định nghĩa ở trên. -->
                <DataGridTextColumn Header="SL" Binding="{Binding Quantity}" Width="40" ElementStyle="{StaticResource CenterCell}"/>
                <!-- Cột Đơn giá. StringFormat={}{0:N0} định dạng số để có dấu phẩy ngăn cách hàng nghìn. -->
                <DataGridTextColumn Header="Đơn giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="80" ElementStyle="{StaticResource CenterCell}"/>
                <!-- Cột Thành tiền. -->
                <DataGridTextColumn Header="Thành tiền" Binding="{Binding TotalPrice, StringFormat={}{0:N0}}" Width="90" ElementStyle="{StaticResource CenterCell}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="FontWeight" Value="SemiBold"/> <!-- In đậm chữ trong cột này. -->
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Hàng 3: Phần tổng tiền. -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <Separator/> <!-- Đường kẻ ngang. -->
            <Grid Margin="0,10,0,0">
                <TextBlock Text="Tổng tiền hàng" FontSize="14"/>
                <TextBlock x:Name="tbSubTotal" Text="150,000" FontSize="14" HorizontalAlignment="Right"/> <!-- Hiển thị tổng tiền trước giảm giá. -->
            </Grid>
            <!-- Phần giảm giá, mặc định bị ẩn (Collapsed) và chỉ hiện khi có giảm giá. -->
            <Grid Margin="0,5,0,0" x:Name="gridDiscount" Visibility="Collapsed">
                <TextBlock Text="Giảm giá" FontSize="14" Foreground="DarkRed"/>
                <TextBlock x:Name="tbDiscountAmount" Text="-15,000" FontSize="14" HorizontalAlignment="Right" Foreground="DarkRed"/>
            </Grid>
            <Separator Margin="0,5,0,5"/>
            <Grid Margin="0,5,0,0">
                <TextBlock Text="TỔNG CỘNG" FontSize="16" FontWeight="Bold"/>
                <TextBlock x:Name="tbTotalAmount" Text="150,000 VNĐ" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right"/> <!-- Hiển thị tổng tiền cuối cùng. -->
            </Grid>
            <TextBlock Text="Cảm ơn quý khách và hẹn gặp lại!" FontStyle="Italic" TextAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Hàng 4: Các nút chức năng. -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnPrint" Content="In hóa đơn" Width="120" Height="35" Margin="5" Click="BtnPrint_Click"/> <!-- Nút in, gọi sự kiện BtnPrint_Click khi nhấn. -->
            <Button x:Name="btnConfirm" Content="Xác nhận thanh toán" Width="160" Height="35" Margin="5" FontWeight="Bold" Background="#4CAF50" Foreground="White" Click="BtnConfirm_Click"/> <!-- Nút xác nhận, gọi sự kiện BtnConfirm_Click khi nhấn. -->
        </StackPanel>
    </Grid>
</Window>