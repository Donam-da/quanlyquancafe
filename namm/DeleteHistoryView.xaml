<UserControl x:Class="namm.DeleteHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             xmlns:controls="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             FontFamily="Segoe UI" Loaded="UserControl_Loaded">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid MaxWidth="700" Margin="20">
            <!-- Bố cục chính với 3 hàng: Tiêu đề, Cảnh báo, Nội dung -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Tiêu đề -->
            <TextBlock Grid.Row="0" Text="XÓA LỊCH SỬ HÓA ĐƠN" 
                       FontSize="20" FontWeight="Bold" Foreground="#2E4053" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <!-- Khung cảnh báo -->
            <Border Grid.Row="1" BorderBrush="OrangeRed" BorderThickness="2" CornerRadius="5" Padding="15" Background="#FFF0F0" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="CẢNH BÁO" FontWeight="Bold" FontSize="16" Foreground="OrangeRed" HorizontalAlignment="Center"/>
                    <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" TextAlignment="Center">
                        Hành động này sẽ <Run FontWeight="Bold">xóa vĩnh viễn</Run> lịch sử hóa đơn và các chi tiết liên quan.
                        Dữ liệu đã xóa <Run FontWeight="Bold" Foreground="Red">KHÔNG THỂ</Run> khôi phục.
                    </TextBlock>
                    <TextBlock Text="Hãy chắc chắn bạn đã sao lưu cơ sở dữ liệu nếu cần thiết." TextAlignment="Center" Margin="0,5,0,0" FontStyle="Italic"/>
                </StackPanel>
            </Border>

            <!-- Phần nội dung chính chia 2 cột: Trái (Cài đặt), Phải (Hành động) -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Phần 1: Tùy chọn -->
                    <RowDefinition Height="*"/>    <!-- Phần 2 & 3: Danh sách và Chi tiết -->
                </Grid.RowDefinitions>

                <!-- Cột Trái: Khu vực cài đặt -->
                <GroupBox Grid.Row="0" Header="Tùy chọn xóa" FontWeight="SemiBold" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <!-- Chọn chế độ xóa -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,15">
                            <TextBlock Text="Chế độ:" VerticalAlignment="Center" FontWeight="Normal" Margin="0,0,15,0"/>
                            <RadioButton x:Name="rbBeforeDate" Content="Trước ngày" IsChecked="True" GroupName="DeleteMode" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbOnDate" Content="Theo ngày" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbInWeek" Content="Theo tuần" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbInMonth" Content="Theo tháng" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                            <RadioButton x:Name="rbByCustomer" Content="Theo khách hàng" GroupName="DeleteMode" Margin="15,0,0,0" Checked="DeleteMode_Changed"/>
                        </StackPanel>

                        <!-- Phần điều khiển chọn ngày và thông tin -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,0,20,0">
                                <TextBlock x:Name="tbDateSelectionLabel" Text="Xóa tất cả hóa đơn TRƯỚC ngày:" HorizontalAlignment="Left" FontSize="14" Margin="0,0,0,10"/>
                                <DatePicker x:Name="dpDate" Width="150" VerticalContentAlignment="Center" FontSize="14" SelectedDateChanged="DpDate_SelectedDateChanged" Visibility="Visible"/>
                                <Calendar x:Name="calendarMultiSelect" 
                                          SelectionMode="MultipleRange"
                                          Visibility="Collapsed"
                                          SelectedDatesChanged="CalendarMultiSelect_SelectedDatesChanged"
                                          PreviewMouseLeftButtonDown="CalendarMultiSelect_PreviewMouseLeftButtonDown"/>
                                <ComboBox x:Name="cbCustomers" Width="250" VerticalContentAlignment="Center" FontSize="14"
                                          Visibility="Collapsed" SelectionChanged="CbCustomers_SelectionChanged"
                                          DisplayMemberPath="Name" SelectedValuePath="ID"
                                          IsEditable="True" IsTextSearchEnabled="True"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" x:Name="tbDateRangeInfo" 
                                       FontSize="12" FontStyle="Italic" Foreground="DarkSlateGray"
                                       Visibility="Collapsed" TextWrapping="Wrap" VerticalAlignment="Center"
                                       MaxWidth="500" TextAlignment="Left"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Phần 2 & 3: Danh sách và chi tiết hóa đơn -->
                <Grid Grid.Row="1" x:Name="gridInvoiceDetails">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/> <!-- Danh sách hóa đơn -->
                        <RowDefinition Height="Auto"/> <!-- Chi tiết hóa đơn -->
                    </Grid.RowDefinitions>

                    <!-- Danh sách hóa đơn sẽ bị xóa -->
                    <GroupBox Grid.Row="0" Header="Danh sách hóa đơn sẽ bị xóa" FontWeight="SemiBold" Padding="5" Margin="0,0,0,10">
                        <DataGrid x:Name="dgInvoicesToDelete" AutoGenerateColumns="False" CanUserAddRows="False"
                                  SelectionMode="Extended" SelectionUnit="FullRow">
                            <DataGrid.Resources>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                                </Style>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTemplateColumn Width="Auto">
                                    <DataGridTemplateColumn.Header>
                                        <CheckBox x:Name="headerCheckBox" Click="HeaderCheckBox_Click" IsChecked="True"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataGridTemplateColumn.Header>
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Mã HĐ" Binding="{Binding ID, StringFormat=D6}" Width="0.8*"/>
                                <DataGridTextColumn Header="Khách hàng" Binding="{Binding CustomerName}" Width="2*"/>
                                <DataGridTextColumn Header="Ngày" Binding="{Binding DateCheckOut, StringFormat=dd/MM/yy HH:mm}" Width="1.2*"/>
                                <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalAmount, StringFormat=N0}" Width="1*"/>
                                <DataGridTemplateColumn Header="Hành động" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Xem" 
                                                    Click="PreviewInvoice_Click" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource LinkButton}"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>

                    <!-- Chi tiết và nút bấm -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <GroupBox Grid.Column="0" Header="Xem trước hóa đơn" FontWeight="SemiBold" Padding="5">
                            <controls:InvoicePreviewControl x:Name="invoicePreview" Visibility="Collapsed"/>
                        </GroupBox>

                        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="20,0,0,0">
                            <Button x:Name="btnDelete" Content="XÓA DỮ LIỆU" Width="200" Height="40" FontSize="16" FontWeight="Bold" Background="#DC3545" Foreground="White" Click="BtnDelete_Click"/>
                            <TextBlock x:Name="tbResult" Margin="0,10,0,0" FontSize="14" FontWeight="SemiBold" Foreground="DarkGreen" TextWrapping="Wrap" TextAlignment="Right"/>
                        </StackPanel>
                    </Grid>

                    <!-- Các control cũ, sẽ được ẩn đi -->
                    <ListView x:Name="lvSelectedDates" Visibility="Collapsed"/>
                    <Border x:Name="borderTotal" Visibility="Collapsed">
                        <TextBlock x:Name="tbTotalInvoiceCount"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>