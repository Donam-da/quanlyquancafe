<Window x:Class="namm.ColorPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chọn màu" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        FontFamily="Segoe UI">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Đỏ (R):" VerticalAlignment="Center" Margin="0,5"/>
        <Slider Grid.Row="0" Grid.Column="1" x:Name="sliderRed" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Margin="5,5"/>
        <TextBlock Grid.Row="0" Grid.Column="2" x:Name="txtRedValue" Text="{Binding ElementName=sliderRed, Path=Value, StringFormat={}{0:F0}}" VerticalAlignment="Center" Margin="5,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Xanh lá (G):" VerticalAlignment="Center" Margin="0,5"/>
        <Slider Grid.Row="1" Grid.Column="1" x:Name="sliderGreen" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Margin="5,5"/>
        <TextBlock Grid.Row="1" Grid.Column="2" x:Name="txtGreenValue" Text="{Binding ElementName=sliderGreen, Path=Value, StringFormat={}{0:F0}}" VerticalAlignment="Center" Margin="5,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Xanh dương (B):" VerticalAlignment="Center" Margin="0,5"/>
        <Slider Grid.Row="2" Grid.Column="1" x:Name="sliderBlue" Minimum="0" Maximum="255" ValueChanged="Slider_ValueChanged" Margin="5,5"/>
        <TextBlock Grid.Row="2" Grid.Column="2" x:Name="txtBlueValue" Text="{Binding ElementName=sliderBlue, Path=Value, StringFormat={}{0:F0}}" VerticalAlignment="Center" Margin="5,5"/>

        <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="colorPreview" Height="50" Margin="0,10" Stroke="Black" StrokeThickness="1"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="BtnOk_Click" IsDefault="True"/>
            <Button Content="Hủy" Width="80" Height="30" Click="BtnCancel_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>