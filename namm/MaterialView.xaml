<!-- Đây là file định nghĩa giao diện người dùng (UI) cho chức năng quản lý Nguyên liệu. -->
<UserControl x:Class="namm.MaterialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1000"
             Loaded="UserControl_Loaded"> <!-- Sự kiện Loaded sẽ được gọi khi control này được tải xong. -->
    <!-- Grid là layout chính, chia không gian thành 2 cột. -->
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/> <!-- Cột bên trái (danh sách) sẽ co giãn. -->
            <ColumnDefinition Width="350"/> <!-- Cột bên phải (form chi tiết) có chiều rộng cố định. -->
        </Grid.ColumnDefinitions>

        <!-- Cột 0 (bên trái): Chứa danh sách nguyên liệu. -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0"> <!-- DockPanel cho phép neo các phần tử vào các cạnh. -->
            <!-- Phần trên cùng của DockPanel, chứa tiêu đề và ô tìm kiếm. -->
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="DANH SÁCH NGUYÊN LIỆU" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBox x:Name="txtSearch" Margin="0,0,0,5" Height="25" ToolTip="Nhập tên nguyên liệu để tìm kiếm" TextChanged="TxtSearch_TextChanged"/> <!-- Ô tìm kiếm, sự kiện TextChanged sẽ được gọi mỗi khi nội dung thay đổi. -->
            </StackPanel>
            <!-- Bảng (DataGrid) hiển thị danh sách nguyên liệu, chiếm phần còn lại của DockPanel. -->
            <DataGrid x:Name="dgMaterials" AutoGenerateColumns="False" IsReadOnly="True"                      
                      SelectionMode="Single" SelectionChanged="DgMaterials_SelectionChanged" 
                      LoadingRow="DgMaterials_LoadingRow"> <!-- SelectionChanged: sự kiện khi chọn dòng. LoadingRow: sự kiện để đánh số thứ tự. -->
                <DataGrid.Columns>
                    <!-- Định nghĩa các cột sẽ hiển thị trong DataGrid. Binding được dùng để liên kết cột với thuộc tính trong dữ liệu. -->
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50" /> <!-- Số thứ tự. -->
                    <DataGridTextColumn Header="Tên nguyên liệu" Binding="{Binding Name}" Width="*" /> <!-- Tên nguyên liệu, Width="*" cho phép cột co giãn. -->
                    <DataGridTextColumn Header="Số lượng tồn" Binding="{Binding Quantity, StringFormat=G29}" Width="100" /> <!-- Số lượng, G29 để bỏ số 0 thừa. -->
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding UnitName}" Width="80" /> <!-- Tên đơn vị tính. -->
                    <DataGridTextColumn Header="Đơn giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="100" /> <!-- Đơn giá, định dạng số có dấu phẩy. -->
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusText}" Width="100" /> <!-- Trạng thái (Sử dụng/Ngưng). -->
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Cột 1 (bên phải): Chứa form thông tin chi tiết và các nút chức năng. -->
        <DockPanel Grid.Column="1"> 
            <TextBlock DockPanel.Dock="Top" Text="THÔNG TIN CHI TIẾT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel> <!-- StackPanel sắp xếp các phần tử con theo chiều dọc. -->
                <TextBlock Text="Tên nguyên liệu:" Margin="0,5,0,2"/>
                <TextBox x:Name="txtName" Padding="5"/> <!-- Ô nhập tên nguyên liệu. -->

                <!-- Grid nhỏ để sắp xếp Số lượng và Đơn giá trên cùng một hàng. -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <TextBlock Text="Số lượng tồn:"/>
                        <TextBox x:Name="txtQuantity" Padding="5"/> <!-- Ô nhập số lượng. -->
                    </StackPanel>
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Đơn giá:"/>
                        <TextBox x:Name="txtPrice" Padding="5"/> <!-- Ô nhập đơn giá. -->
                    </StackPanel>
                </Grid>

                <TextBlock Text="Đơn vị tính:" Margin="0,10,0,2"/>
                <ComboBox x:Name="cbUnit" Padding="5" DisplayMemberPath="Name" SelectedValuePath="ID"/> <!-- ComboBox để chọn đơn vị tính. DisplayMemberPath: hiển thị cột 'Name'. SelectedValuePath: giá trị thực sự là cột 'ID'. -->

                <TextBlock Text="Ghi chú:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtDescription" Padding="5" Height="60" TextWrapping="Wrap"/> <!-- Ô nhập ghi chú, TextWrapping="Wrap" cho phép xuống dòng. -->

                <CheckBox x:Name="chkIsActive" Content="Đang sử dụng" Margin="0,10,0,0" IsChecked="True"/> <!-- CheckBox cho trạng thái, mặc định được check. -->

                <!-- WrapPanel chứa các nút chức năng, tự động xuống dòng nếu không đủ chỗ. -->
                <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnAdd" Content="Thêm" Width="80" Margin="5" Click="BtnAdd_Click"/> <!-- Nút Thêm. -->
                    <Button x:Name="btnEdit" Content="Sửa" Width="80" Margin="5" Click="BtnEdit_Click"/> <!-- Nút Sửa. -->
                    <Button x:Name="btnDelete" Content="Xóa" Width="80" Margin="5" Click="BtnDelete_Click"/> <!-- Nút Xóa. -->
                </WrapPanel>
                <Button x:Name="btnReset" Content="Làm mới" Width="80" Margin="5" HorizontalAlignment="Center" Click="BtnReset_Click"/> <!-- Nút Làm mới để xóa trắng form. -->
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>