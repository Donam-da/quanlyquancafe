<UserControl x:Class="namm.RecipeView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="1000"
             Loaded="UserControl_Loaded">
    <Grid Margin="10">
        <Grid.Resources>
            <Style x:Key="CenterAlignedColumnHeader" TargetType="DataGridColumnHeader">
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="CenterAlignedCell" TargetType="TextBlock">
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 1: Chọn đồ uống và thiết lập công thức -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock DockPanel.Dock="Top" Text="THIẾT LẬP CÔNG THỨC" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel>
                <TextBlock Text="Chọn đồ uống pha chế:" Margin="0,5,0,2"/>
                <ComboBox x:Name="cbDrink" Padding="5" DisplayMemberPath="Name" SelectedValuePath="ID"
                          SelectionChanged="CbDrink_SelectionChanged"
                          ToolTip="Chọn đồ uống để xem hoặc sửa công thức"/>

                <TextBlock Text="Mã kiểu đồ uống:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtDrinkCode" Padding="5" IsReadOnly="True" Background="#EEEEEE" ToolTip="Mã này được tạo tự động"/>

                <Grid Margin="0,20,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Nguyên liệu" FontWeight="Bold"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="Số lượng" FontWeight="Bold" HorizontalAlignment="Center"/>

                    <ComboBox x:Name="cbMaterial" Grid.Row="1" Grid.Column="0" Margin="0,5,5,5" DisplayMemberPath="Name" SelectedValuePath="ID"/>
                    <TextBox x:Name="txtQuantity" Grid.Row="1" Grid.Column="1" Margin="0,5,5,5" VerticalContentAlignment="Center"/>
                    <Button x:Name="btnAddIngredient" Grid.Row="1" Grid.Column="2" Content="Thêm" Width="50" Margin="0,5,0,5" Click="BtnAddIngredient_Click"/>
                </Grid>

                <TextBlock Text="Nguyên liệu trong công thức:" Margin="0,15,0,5" FontWeight="Bold"/>
                <DataGrid x:Name="dgCurrentRecipe" AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="150"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nguyên liệu" Binding="{Binding MaterialName}" Width="2.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding Quantity, StringFormat=G29}" Width="1.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                        <DataGridTextColumn Header="Đơn vị" Binding="{Binding UnitName}" Width="1*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                        <DataGridTemplateColumn Header="Xóa" Width="Auto" HeaderStyle="{StaticResource CenterAlignedColumnHeader}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Xóa" Click="DeleteIngredient_Click" CommandParameter="{Binding}" Padding="5,2"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <TextBlock x:Name="txtCurrentRecipeCost" Text="Tổng chi phí: 0" HorizontalAlignment="Right" Margin="0,5,0,0" FontWeight="Bold" FontSize="14"/>

                <TextBlock Text="Giá bán cho khách:" Margin="0,10,0,2"/>
                <TextBox x:Name="txtActualPrice" Padding="5"/>

                <Grid Margin="0,15,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Row="0" x:Name="btnSaveRecipe" Content="Lưu công thức" Width="140" HorizontalAlignment="Center" Margin="0,0,0,5" Click="BtnSaveRecipe_Click"/>
                    <Button Grid.Row="1" x:Name="btnToggleRecipeActive" Content="Ẩn/Hiện Công thức" Width="140" HorizontalAlignment="Center" Margin="0,5,0,5" Click="BtnToggleRecipeActive_Click" IsEnabled="False" Background="#FFC107" Foreground="Black"/>
                    <Button Grid.Row="2" x:Name="btnRemoveRecipe" Content="Gỡ công thức" Width="140" HorizontalAlignment="Center" Margin="0,5,0,0" Click="BtnRemoveRecipe_Click" Background="#DC3545" Foreground="White"/>
                </Grid>
            </StackPanel>
        </DockPanel>

        <!-- Cột 2: Danh sách nguyên liệu trong công thức -->
        <DockPanel Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="TỔNG HỢP CÔNG THỨC" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <DataGrid x:Name="dgRecipeSummary" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      HeadersVisibility="Column" SelectionMode="Single"
                      SelectionChanged="DgRecipeSummary_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="0.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Đồ uống pha chế" Binding="{Binding DrinkName}" Width="1.5*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Nguyên liệu" Binding="{Binding RecipeSummary}" Width="3*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Chi phí" Binding="{Binding TotalCost, StringFormat={}{0:N0}}" Width="1*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Giá bán" Binding="{Binding ActualPrice, StringFormat={}{0:N0}}" Width="1*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding RecipeStatus}" Width="1*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                    <DataGridTextColumn Header="Có thể làm" Binding="{Binding MaxCanMake}" Width="1*" HeaderStyle="{StaticResource CenterAlignedColumnHeader}" ElementStyle="{StaticResource CenterAlignedCell}"/>
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Popup for notifications -->
        <Popup x:Name="notificationPopup"
               Placement="Center"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <Border Background="#333333" CornerRadius="5" Padding="15,10">
                <TextBlock x:Name="notificationText" Foreground="White" FontSize="14"/>
            </Border>
        </Popup>
    </Grid>
</UserControl>
