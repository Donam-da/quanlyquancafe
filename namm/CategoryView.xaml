<!-- Định nghĩa giao diện người dùng (UserControl) cho màn hình quản lý Loại đồ uống. -->
<UserControl x:Class="namm.CategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:namm"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="1000"  <!-- Chiều cao và chiều rộng thiết kế (chỉ để xem trước). -->
             Loaded="UserControl_Loaded"> <!-- Sự kiện được gọi khi UserControl được tải xong. -->
    <!-- Layout chính, chia giao diện thành 2 cột. -->
    <Grid Margin="10">
        <!-- Định nghĩa 2 cột: cột trái chiếm phần lớn không gian (*), cột phải rộng 350 pixel. -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350"/>
        </Grid.ColumnDefinitions>

        <!-- Cột 0 (bên trái): Chứa danh sách các loại đồ uống. -->
        <DockPanel Grid.Column="0" Margin="0,0,10,0">
            <!-- Phần trên cùng của DockPanel, chứa tiêu đề và ô tìm kiếm. -->
            <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
                <TextBlock Text="DANH SÁCH LOẠI ĐỒ UỐNG" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBox x:Name="txtSearch" Margin="0,0,0,5" Height="25" ToolTip="Nhập tên loại đồ uống để tìm kiếm" TextChanged="TxtSearch_TextChanged"/> <!-- Ô tìm kiếm, gọi sự kiện khi nội dung thay đổi. -->
            </StackPanel>
            <!-- Bảng (DataGrid) hiển thị danh sách các loại đồ uống. -->
            <DataGrid x:Name="dgCategories" AutoGenerateColumns="False" IsReadOnly="True"                      
                      SelectionMode="Single" SelectionChanged="DgCategories_SelectionChanged" <!-- Chỉ cho phép chọn 1 dòng, gọi sự kiện khi lựa chọn thay đổi. -->
                      LoadingRow="DgCategories_LoadingRow"> <!-- Sự kiện được gọi khi một dòng mới đang được tải, dùng để đánh số thứ tự. -->
                <!-- Định nghĩa các cột sẽ hiển thị trong DataGrid. -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50" /> <!-- Cột số thứ tự. -->
                    <DataGridTextColumn Header="Tên loại" Binding="{Binding Name}" Width="*" /> <!-- Cột tên loại, chiếm hết không gian còn lại. -->
                    <DataGridTextColumn Header="Trạng thái" Binding="{Binding StatusText}" Width="100" /> <!-- Cột trạng thái (Sử dụng/Ngưng). -->
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>

        <!-- Cột 1 (bên phải): Chứa form thông tin chi tiết và các nút chức năng. -->
        <DockPanel Grid.Column="1">
            <TextBlock DockPanel.Dock="Top" Text="THÔNG TIN CHI TIẾT" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
            <!-- Chứa các control để nhập/sửa thông tin. -->
            <StackPanel>
                <TextBlock Text="Tên loại đồ uống:" Margin="0,5,0,2"/>
                <TextBox x:Name="txtName" Padding="5"/> <!-- Ô nhập tên loại đồ uống. -->

                <CheckBox x:Name="chkIsActive" Content="Sử dụng" IsChecked="True" VerticalAlignment="Center" Margin="0,15,0,10"/> <!-- Checkbox để bật/tắt trạng thái sử dụng. -->

                <!-- Chứa các nút Thêm, Sửa, Xóa. -->
                <WrapPanel HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button x:Name="btnAdd" Content="Thêm" Width="80" Margin="5" Click="BtnAdd_Click"/> <!-- Nút thêm mới. -->
                    <Button x:Name="btnEdit" Content="Sửa" Width="80" Margin="5" Click="BtnEdit_Click"/> <!-- Nút sửa thông tin. -->
                    <Button x:Name="btnDelete" Content="Xóa" Width="80" Margin="5" Click="BtnDelete_Click" Background="LightCoral"/> <!-- Nút xóa. -->
                </WrapPanel>
                <Button x:Name="btnReset" Content="Làm mới" Width="80" Margin="5" HorizontalAlignment="Center" Click="BtnReset_Click"/> <!-- Nút để xóa trắng các ô nhập liệu. -->
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>